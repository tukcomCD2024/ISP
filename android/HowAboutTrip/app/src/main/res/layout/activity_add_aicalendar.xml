<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="ai"
            type="com.project.how.view.activity.ai.AddAICalendarActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="18dp">

                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/icon_previous"
                    android:scaleType="fitCenter"
                    android:onClick="@{()-> ai.finish()}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/alarm"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_alarm_none"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/white_card_round_rectangle"
            android:padding="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <TextView
                android:id="@+id/des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/destination"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/des_input"
                style="@style/Button.BlackRound"
                android:layout_width="50dp"
                android:layout_height="22dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="@string/input"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:onClick="@{()-> ai.showDesInput()}"
                app:layout_constraintStart_toEndOf="@id/des_output"
                app:layout_constraintTop_toBottomOf="@+id/des" />

            <TextView
                android:id="@+id/des_output"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:visibility="gone"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/des" />

            <TextView
                android:id="@+id/purpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/purpose"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/des_input" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/purpose_input"
                style="@style/Button.BlackRound"
                android:layout_width="50dp"
                android:layout_height="22dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="@string/input"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:onClick="@{()-> ai.showPurposeInput()}"
                app:layout_constraintStart_toEndOf="@id/purpose_output"
                app:layout_constraintTop_toBottomOf="@id/purpose"/>

            <TextView
                android:id="@+id/purpose_output"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:visibility="gone"
                android:maxWidth="200dp"
                android:maxLines="2"
                android:maxLength="40"
                android:ellipsize="end"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/purpose" />

            <TextView
                android:id="@+id/departure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/departure_date"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/purpose_input" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/departure_input"
                style="@style/Button.BlackRound"
                android:layout_width="50dp"
                android:layout_height="22dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="@string/input"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:onClick="@{() -> ai.showDepartureInput()}"
                app:layout_constraintStart_toEndOf="@id/departure_output"
                app:layout_constraintTop_toBottomOf="@id/departure"/>

            <TextView
                android:id="@+id/departure_output"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:visibility="gone"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/departure" />

            <TextView
                android:id="@+id/entrance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/entrance_date"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/departure_input" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/entrance_input"
                style="@style/Button.BlackRound"
                android:layout_width="50dp"
                android:layout_height="22dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text="@string/input"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:onClick="@{() -> ai.showEntranceInput()}"
                app:layout_constraintStart_toEndOf="@id/entrance_output"
                app:layout_constraintTop_toBottomOf="@+id/entrance" />

            <TextView
                android:id="@+id/entrance_output"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:visibility="gone"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/entrance" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/search"
                style="@style/Button.BlackRound"
                android:layout_width="75dp"
                android:layout_height="22dp"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/icon_search_size_fixed"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:text="@string/search"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:onClick="@{()-> ai.search()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/entrance_input" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:adSize="BANNER"
            app:adUnitId="@string/GOOGLE_AD_MOB_BANNER_TEST"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>