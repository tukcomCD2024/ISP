<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="mypage"
            type="com.project.how.view.fragment.main.MypageFragment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingHorizontal="35dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{mypage.name}"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/bm_hanna"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/name_edit"
            style="@style/Button.BlackRound"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginTop="10dp"
            android:text="@string/name_edit"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <ImageButton
            android:id="@+id/calendar_search"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_calendar_search"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_edit"
            app:layout_constraintEnd_toStartOf="@id/weather"/>

        <ImageButton
            android:id="@+id/weather"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_weather"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toEndOf="@id/calendar_search"
            app:layout_constraintTop_toBottomOf="@+id/name_edit"
            app:layout_constraintEnd_toStartOf="@id/exchange_rate"/>

        <ImageButton
            android:id="@+id/exchange_rate"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_exchange_rate"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toEndOf="@id/weather"
            app:layout_constraintTop_toBottomOf="@+id/name_edit"
            app:layout_constraintEnd_toStartOf="@id/picture"/>

        <ImageButton
            android:id="@+id/picture"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_picture_linear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/exchange_rate"
            app:layout_constraintTop_toBottomOf="@+id/name_edit" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/calendar_search"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendar_search"
            app:layout_constraintEnd_toStartOf="@id/textView3"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/weather"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/weather"
            app:layout_constraintEnd_toStartOf="@id/textView4"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/exchange_rate"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/exchange_rate"
            app:layout_constraintEnd_toStartOf="@+id/textView5"/>


        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/menu_picture"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/picture" />


        <ImageButton
            android:id="@+id/membership"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_membership"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toStartOf="@id/heart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <ImageButton
            android:id="@+id/heart"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_heart"
            android:layout_marginTop="30dp"
            android:onClick="@{()->mypage.moveLike()}"
            app:layout_constraintEnd_toStartOf="@id/inquiry"
            app:layout_constraintStart_toEndOf="@+id/membership"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <ImageButton
            android:id="@+id/inquiry"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginStart="1dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_talk"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toStartOf="@id/setting"
            app:layout_constraintStart_toEndOf="@+id/heart"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <ImageButton
            android:id="@+id/setting"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_setting"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toEndOf="@id/exchange_rate"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/membership"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/membership"
            app:layout_constraintEnd_toStartOf="@id/textView7"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/heart"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:onClick="@{()->mypage.moveLike()}"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/heart"
            app:layout_constraintEnd_toStartOf="@id/textView8"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/inquiry"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/inquiry"
            app:layout_constraintEnd_toStartOf="@+id/textView9"/>


        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/setting"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/setting" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:adSize="BANNER"
            android:layout_marginTop="20dp"
            app:adUnitId="@string/GOOGLE_AD_MOB_BANNER_TEST"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>