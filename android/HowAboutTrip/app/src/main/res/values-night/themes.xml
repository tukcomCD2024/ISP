<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HowAboutTrip" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor" >@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.HowAboutTrip.BlackStatusBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor" >@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    <style name="Base.Widget.AppCompat.Button.BlackRound" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/black_round_rectangle</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Button.GrayRound" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/gray_round_rectangle</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WhiteTopShadowBottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>
    <style name="WhiteBottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:itemBackground">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>