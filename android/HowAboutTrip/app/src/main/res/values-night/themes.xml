<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HowAboutTrip" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor" >@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.App.DatePicker</item>
    </style>

    <style name="Theme.HowAboutTrip.BlackStatusBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor" >@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    <style name="Base.Widget.AppCompat.Button.BlackRound" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/black_round_rectangle</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Button.GrayRound" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/gray_round_rectangle</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WhiteTopShadowBottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>
    <style name="WhiteBottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:itemBackground">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="SimpleTimePicker">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TabItemTextSize" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="FabRoundedCorner">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">cut</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="daySelected" parent="@style/Widget.Material3.MaterialCalendar.Day.Selected">
        <item name="itemTextColor">@color/white</item>
        <item name="itemStrokeColor">@android:color/transparent</item>
        <item name="itemBackground">@color/red</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.Material3.MaterialCalendar.Fullscreen">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="rangeFillColor">@color/black</item>
        <item name="daySelectedStyle">@style/daySelected</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    </style>
    e>
</resources>